CXX ?= g++
CFLAGS = -Wall -Wconversion -O3 -fPIC -fopenmp -O0 -g3
SHVER = 2

  

all: svm-runner

lib: svm.o
	$(CXX) -shared -dynamiclib -Wl,-soname,libsvm.so.$(SHVER) svm.o -o libsvm.so.$(SHVER)

svm-runner: LibSVMRunner.cpp svm.o
	$(CXX) $(CFLAGS) LibSVMRunner.cpp svm.o -o svm-runner -lm
svm-predict: svm-predict.c svm.o
	$(CXX) $(CFLAGS) svm-predict.c svm.o -o svm-predict -lm
svm-train: svm-train.c svm.o
	$(CXX) $(CFLAGS) svm-train.c svm.o -o svm-train -lm
svm.o: svm.cpp svm.h
	$(CXX) $(CFLAGS) -c svm.cpp
clean:
	rm -f *~ svm.o svm-train svm-predict svm-runner libsvm.so.$(SHVER)
